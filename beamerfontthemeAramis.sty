  \setmainfont{EB Garamond}

  \setsansfont{Nexa}[
    Path = fonts/,
    UprightFont = *Light,
    BoldFont = *Bold,
    ItalicFont = *LightItalic,
    BoldItalicFont = *BoldItalic,
    Extension = .otf
  ]

\fi

