% ---- (COLORS) ---------------------------------------------------------

% Custom color definitions
\definecolor{primaryColor}{RGB}{109, 30, 133} % Primary color
\definecolor{secondaryColor}{RGB}{1, 1, 1} % Secondary color

% Applying colors to the theme
\setbeamercolor{structure}{fg=primaryColor}
\setbeamercolor{palette primary}{bg=primaryColor, fg=white}
\setbeamercolor{palette secondary}{bg=secondaryColor, fg=white}
\setbeamercolor{title}{bg=primaryColor, fg=white} % Main title color

% Header colors
\setbeamercolor{headline}{bg=secondaryColor, fg=white}
\setbeamercolor{section in head/foot}{bg=primaryColor, fg=white}
\setbeamercolor{subsection in head/foot}{bg=secondaryColor, fg=white}

% Footer color settings
\setbeamercolor{author in head/foot}{bg=primaryColor, fg=white} % Author name
\setbeamercolor{title in head/foot}{bg=secondaryColor, fg=white} % Title
\setbeamercolor{date in head/foot}{bg=primaryColor, fg=white} % Year
\setbeamercolor{page number in head/foot}{bg=primaryColor, fg=white} % Page number

% ---- (FONTS) ---------------------------------------------------------

% ---- (INNER THEME) ---------------------------------------------------------

\useinnertheme{circles} % Inner theme


% ---- (OUTER THEME) ---------------------------------------------------------

\useoutertheme{default} % Outer theme

% ---- (MISC) ---------------------------------------------------------

\setbeamertemplate{navigation symbols}{} % Remove navigation symbols