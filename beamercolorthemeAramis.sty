\mode<presentation>

% Custom color definitions, from Aramis's chart
\definecolor{color_aramis_purple}{RGB}{112, 32, 130} % Primary color : Aramis purple
\definecolor{color_aramis_black}{RGB}{0, 0, 0} % Secondary color : black
\definecolor{color_aramis_gray}{RGB}{210, 210, 210} % Secondary color : black
\definecolor{color_aramis_white}{RGB}{255, 255, 255} % Secondary color : white
\definecolor{color_aramis_green}{RGB}{120, 214, 75} % Tertiary color : green
\definecolor{color_aramis_blue}{RGB}{0, 175, 215} % Tertiary color : blue


\setbeamercolor*{normal text}{fg = color_aramis_black, bg = color_aramis_white}

\setbeamercolor*{all titles}{parent = normal text}
\setbeamercolor*{title}{parent = all titles}
\setbeamercolor*{subtitle}{parent = all titles}
\setbeamercolor*{frametitle}{parent = all titles, fg = color_aramis_purple}

\setbeamercolor*{author}{parent = normal text, fg = color_aramis_blue}
\setbeamercolor*{institute}{parent = normal text}
\setbeamercolor*{date}{parent = normal text, fg = color_aramis_purple}

\setbeamercolor*{framenumber}{parent = normal text, fg = color_aramis_purple}

\setbeamercolor*{section in toc}{parent=normal text, fg = color_aramis_purple}
\setbeamercolor*{subsection in toc}{parent=normal text}

\setbeamercolor*{item}{parent = normal text, fg = color_aramis_purple}

\setbeamercolor*{caption name}{parent=normal text}

\setbeamercolor*{bibliography item}{parent=normal text}
\setbeamercolor*{bibliography entry title}{parent=normal text}
\setbeamercolor*{bibliography entry author}{parent=normal text}


\mode<all>
